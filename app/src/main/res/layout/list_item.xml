<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        style="@style/RoundedCorners">
        <TextView
            android:id="@+id/textList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Элемент списка"
            android:textAppearance="@style/HeaderTextStyle"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/textType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textList"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Тип паттерна"
            android:textSize="25sp"
            android:textAppearance="@style/SubHeaderTextStyle" />

        <ImageButton
            android:id="@+id/buttonDescription"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/textType"
            android:layout_alignParentStart="true"
            android:src="@drawable/description"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:tint="@color/colorlight2" />

        <ImageButton
            android:id="@+id/buttonInspection"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/textType"
            android:layout_centerHorizontal="true"
            android:src="@drawable/inspection"
            android:backgroundTint="@color/white"
            android:scaleType="fitXY"
            android:tint="@color/colorlight2"/>

        <ImageButton
            android:id="@+id/buttonCode"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/textType"
            android:layout_alignParentEnd="true"
            android:src="@drawable/code"
            android:backgroundTint="@color/white"
            android:scaleType="fitXY"
            android:tint="@color/colorlight2" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>